<%- include('./partials/header') %>

<div class="page-one" style="height: fit-content;">
    <!-- Navigation bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <a href="/" class="navbar-brand mb-0 h1">Bloggo</a>
            <div class="link-div d-flex">
                <a class="nav-link mx-2" href="/">Home</a>
                <a class="nav-link mx-2" href="/contact">Contact Us</a>
                <a class="nav-link mx-2" href="/about">About</a>
            </div>
        </div>
    </nav>

    <div class="diary">
        <div class="title text-center mt-4">
            <h3><%= title %></h3>
            <div class="dash mx-auto pt-4"></div>
            <div class="dots-container">
                <button class="dot-btn" id="option-btn">
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                </button>
                <form action="/delete" method="POST">
                    <div class="drop-menu" id="drop-menu">
                        <input type="hidden" name="blogID" value="<%= blogId %>">
                         <button class="menu-item" type="submit">Delete</button>
                         <button class="menu-item" type="button">Edit</button>
                    </div>
                </form>
            </div>
            <div class="image-container w-75 mx-auto mt-3" style="background-image: url(<%= blogImg %>)";>
                <img src="<%= blogImg %>" class="posts-img" alt="<%= title %> Image" title="<%= title %> Image">
            </div>
            <div class="text-center p-4">
                <p><%= desc %></p>
            </div>
            <button class="btn btn-outline-secondary"><a href="/">Go Back</a></button>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>